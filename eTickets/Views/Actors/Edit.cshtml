@model Actor

@{
	ViewData["Title"] = "Edit Actor";
}

<div class="row text-black">
	<div class="col-md-8 offset-2">
		<p>
			<h1>Edit actor details</h1>
		</p>

		<div class="row">
			<div class="col-md-8 offset-2">
				<form method="post" asp-action="Edit">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>

					<div class="mb-3 text-center">
						<img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicPreview" />
					</div>

					<div class="mb-3">
						<label asp-for="ProfilePicURL" class="form-label">Profile Picture URL</label>
						<input type="text" asp-for="ProfilePicURL" class="form-control">
						<span asp-validation-for="ProfilePicURL" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="FullName" class="form-label"></label>
						<input type="text" asp-for="FullName" class="form-control" />
						<span asp-validation-for="FullName" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Bio" class="form-label"></label>
						<input type="text" asp-for="Bio" class="form-control" />
						<span asp-validation-for="Bio" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<input type="submit" value="Update" class="btn btn-outline-success float-end" />
						<a class="btn btn-outline-secondary" asp-action="Index"> Show All</a>
					</div>
				</form>
			</div>
		</div>
	</div>

</div>

@section Scripts {
	<script>
		$(document).ready(function () {
			var output = document.getElementById('ProfilePicPreview');
			output.src = $("#ProfilePicURL").val();
		})

		$("#ProfilePicURL").on("change", function () {
			var output = document.getElementById('ProfilePicPreview');
			output.src = $(this).val();
		})
	</script>
}
